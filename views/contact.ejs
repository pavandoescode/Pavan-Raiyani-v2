    <div class="container  sec-top ">

        <section class="mb-4">

            <h2 class="h1-responsive font-weight-bold text-center my-4">Contact Me</h2>

            <p class="text-center w-responsive mx-auto mb-5">Do you have any query regarding work? Please do not
                hesitate to
                contact me directly. </p>

            <div class="row container">

                <div class="col-md-9 mb-md-0 mb-5">
                    <form id="contact-form" name="contact-form" method="GET">

                        <div class="row">

                            <div class="details col-md-6">
                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control" id="name" name="name"
                                        placeholder="Your name">
                                    <label for="name">Your name</label>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input type="email" class="form-control" id="email" name="email"
                                        placeholder="name@example.com">
                                    <label for="email">Enter Your email</label>
                                </div>
                            </div>

                        </div>

                        <div class="row">

                            <div class="col-md-12">
                                <div class="form-floating mb-3">
                                    <textarea name="body" id="message" name="message" rows="8" class="form-control"
                                        id="message" placeholder="Your message"></textarea>
                                    <label for="message">Your message</label>
                                </div>
                            </div>


                        </div>

                    </form>

                    <div class="text-center m-2 text-md-left">
                        <button class="btn send-button" onclick="sendEmail()"> 
                            
                                 Send Mail</button>
                    </div>
                    <div class="status"></div>
                </div>

                <div class="col-md-3 text-center">
                    <ul class="list-unstyled mb-0">
                        <li class="mb-4"><img  height="24px" width="24px" src="./resource/images/icons8-location-50.png"
                                alt="" srcset="">
                            <p>Kamrej, Surat, Gujarat</p>
                        </li>

                        <li class="mb-4"><img src="./resource/images/icons8-call-24.png" alt="" srcset=""></i>
                            <p>+91 8238925885</p>
                        </li>

                        <li class="mb-4"><img src="./resource/images/icons8-mail-24.png" alt="" srcset="">
                            <p>pavandoescode@gmail.com</p>
                        </li>
                    </ul>
                </div>

            </div>

        </section>

    </div>

    <script>
        function sendEmail() {
            var to = "pavandoescode@gmail.com";
            var name = document.getElementById('name').value;
            var subject = `"Hello Pavan, I'm ${name}, and I recently checked out your portfolio."`;
            var message = document.getElementById('message').value;

            var mailtoUrl = 'mailto:' + to + '?subject=' + encodeURIComponent(subject) + '&body=' + encodeURIComponent(message);

            window.location.href = mailtoUrl;
        }
    </script>







